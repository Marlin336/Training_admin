<Window x:Class="Training_admin.Main_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_admin"
        mc:Ignorable="d"
        Title="Главное меню" Height="597" Width="799" MinWidth="374" MinHeight="332" Closing="Window_Closing">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="b_log" Header="Журналирование" Height="25">
                <MenuItem Header="Журнал посещений"/>
                <MenuItem Header="Журнал транзакций"/>
            </MenuItem>
            <MenuItem x:Name="b_profile" Header="Профиль"/>
            <MenuItem x:Name="b_exit" Header="Выход" Click="B_exit_Click"/>
        </Menu>
        <TabControl Margin="0,25,0,0">
            <TabItem Header="Клиенты">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dg_customer"/>
                </Grid>
            </TabItem>
            <TabItem Header="Тренеры">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dg_trainer"/>
                </Grid>
            </TabItem>
            <TabItem Header="Группы">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dg_group"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
